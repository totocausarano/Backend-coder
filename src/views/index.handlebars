<h1>Lista de Productos</h1>
<ul>
    {{#each products}}
    <li>
        <strong>{{name}}</strong> - {{description}} <br>
        <p>Precio: ${{price}} | Categor√≠a: {{category}}</p>
        <button onclick="addToCart('{{_id}}')">Agregar al carrito</button>
    </li>
    {{/each}}
</ul>

<p>P√°gina {{page}} de {{totalPages}}</p>

{{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}">P√°gina Anterior</a>
{{/if}}
{{#if hasNextPage}}
    <a href="/products?page={{nextPage}}">P√°gina Siguiente</a>
{{/if}}

<script>
    async function addToCart(productId) {
        // üö® IMPORTANTE: Debes reemplazar esto con el ID real del carrito si lo tienes
        const cartId = "67bcb5aa546c6562dfc9e3a1"; 

        try {
            const response = await fetch(`/api/carts/${cartId}/products/${productId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const data = await response.json();
            if (response.ok) {
                alert("‚úÖ Producto agregado al carrito");
            } else {
                alert("‚ùå Error: " + data.message);
            }
        } catch (error) {
            console.error("Error agregando al carrito:", error);
        }
    }
</script>